<div class="page">

  {{#with header}}
  <div class="header">

    <header class="header__content">
      <div class="header__block">
        <img src="/img/header/iconka.svg" alt="Apple" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <img src="/img/header/iconka1.svg" alt="Search" class="header__icon">
        <img src="/img/header/iconka2.svg" alt="chumudan" class="header__icon">
      </div>
    </header>
  </div>

  {{#with ad}}
  <div class="sub-header">
    <div class="sub-header__content">
      <p class="sub-header__text">{{title}}</p>

      <a class="sub-header__shop" href="{{link.url}}">{{link.text}}</a>

    </div>
  </div>
  {{/with}}

  {{/with}}

